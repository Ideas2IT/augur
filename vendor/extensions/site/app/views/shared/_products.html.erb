<div class="container">
	<% products.each do |product| %>
	  <% if Spree::Config[:show_zero_stock_products] || product.has_stock? %>
	  	<% if taxon.nil? %>
	  	  	<%= link_to small_image(product), product %>
	  	  	<%= link_to product.name + "<span class='price selling'>#{product_price(product)}</span>", product, :class => 'info' %>			  	
	    <% else %>
		   	<div class= "column span-12 push-6">
				<%= link_to small_image(product), seo_url(taxon, product) %>			
			</div>
		    <div class="column span-8 last pull-8">
				<%= link_to product.name , seo_url(taxon, product), :class=>"product_name" %><br/>  							  						   					   					   		
				 <font class="product_available">
				 	<%=show_text_available(product)%> <%=product.stores.count unless product.stores.empty?%> <%=show_text_store(product)%>
				 </font>
				 <div class="price_text">
				 	prices starting from <%=link_to "<span class='price selling'>#{product_price(product)}</span>" , seo_url(taxon, product)%>  
					<%product.stores.each do |store|%>
						at <%=store.name%>
					<%end%>	
				 </div>	
			</div>
		<% end %>
	  <% end %>
	<% end %>
</div>
<hr class="space" />
