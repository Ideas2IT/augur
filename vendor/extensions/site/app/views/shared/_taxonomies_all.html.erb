<% @taxonomies.each do |taxonomy| %>
<%if taxonomy.name == 'Categories'%>
<div class="span-24">
<%count = 1%>
<% taxonomy.root.children.each do |taxon| %>
      <%class_name = "span-6" %>
	  
	  <%if 0 == count%4 %>
	  	<%class_name = "span-6 last" %>			
	  <%end%>
	  
	  <%if 1 == count%4 %>
	  	<div class="span-24">
	  <%end%>
	  
	  <div class="<%=class_name%>">	  
  		<div class = "prepend-1">
  			<font class="browsecatehead"><%= taxon.name%></font>
		</div>
		<hr />
		<%@taxons = Taxon.find(:all,:conditions => ['parent_id = ?' , taxon.id])%>
		<div class="prepend-top">
			<%@taxons.each do |taxon_second|%>
				<%=link_to taxon_second.name , "/t/#{taxonomy.name}/#{taxon.name}/#{taxon_second.name}/" ,:class => "browsecatecontent"%>&nbsp;
			<%end%>	
		</div>
	  </div>

	  <%if 0 == count%4 %>
		</div>
	  <%end%>

	 <%count += 1 %>
	<% end %>
  	</div>
	<%end%>
<% end %>	


