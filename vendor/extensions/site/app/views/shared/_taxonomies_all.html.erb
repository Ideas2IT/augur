<% @taxonomies.each do |taxonomy| %>
<%if taxonomy.name == 'Categories'%>
<div class="span-24">
<%count = 1%>
<% taxonomy.root.children.each do |taxon| %>
      <%class_name = "span-6" %>
	  
	  <%if 0 == count%4 %>
	  	<%class_name = "span-6 last" %>			
	  <%end%>
	  
	  <%if 1 == count%4 %>
	  	<div class="span-24">
	  <%end%>
	  
	  <div class="<%=class_name%>">	  
  		<div class="browsecatehead"><%=taxon.name%></div>
		<hr />
		<%@taxons = Taxon.find(:all,:conditions => ['parent_id = ?' , taxon.id])%>
		<div class="prepend-top" id="product-detail">
			<li>
				<%seperator_count = 1%>
				<%@taxons.each do |taxon_second|%>
					<%dispaly_name = "#{taxon_second.name}, "%>
				    <%if seperator_count == @taxons.size %> 
						<%dispaly_name = taxon_second.name%>
					<%end%>					
					<%=link_to dispaly_name , "/t/#{taxonomy.name.gsub(' ' , '-')}/#{taxon.name.gsub(' ' , '-')}/#{taxon_second.name.gsub(' ' , '-')}/" %>&nbsp;
					<%seperator_count += 1%>
				<%end%>		
			</li>
			
		</div>
	  </div>

	  <%if 0 == count%4 %>
		</div>
	  <%end%>

	 <%count += 1 %>
	<% end %>
  	</div>
	<%end%>
<% end %>	


