<% @body_id = 'product-details' %>
<div class="container">
	<div class="span-24">
		<h2 class="product_head"><%= @product.name %></h2>
		<div id="main-image">
		<%= render 'image' -%>
	  </div>
	  <div id="thumbnails">
	    <%= render 'thumbnails', :product => @product -%>
	  </div>
	  <br/><br/>
	</div>
	<hr class="space">
	<hr class="space">
	<div class="span-23" id="product-description">
		<div class="span-22" id="column_head">
			<div class="span-4">
				Price
			</div>
			<div class="span-6">
				Store Name
			</div>
			<div class="span-8">
				Product Description
			</div>
			<div class="span-4 last">
				Go to Store
			</div>
		</div>
		<%=render 'stores' , :product => @product%>	
	</div>
</div>




